{% if movie.id in app.session.get('favorite_list') %}
<a href="{{ path('movie_remove_favorite', {"movieId": movie.id}) }}" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i class="bi bi-bookmark-x-fill"></i></a>
{% else %}
<a href="{{ path('movie_add_favorite', {"movieId": movie.id}) }}" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i class="bi bi-bookmark-plus"></i></a>
{% endif %}
